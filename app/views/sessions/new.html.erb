<div class="auth-page">
  <div class="container page">
    <div class="row">
      <div class="col-md-6 offset-md-3 col-xs-12">
        <h1 class="text-xs-center">Login</h1>
        <p class="text-xs-center">
          <a href="">Need an account?</a>
        </p>

        <ul class="error-messages">
          <li>That email is already taken</li>
        </ul>

        <%= form_tag sessions_path do %>
          <fieldset class="form-group">
            <%= email_field_tag :email, nil, placeholder: "Email", class: "form-control form-control-lg" %>
          </fieldset>
          <fieldset class="form-group">
            <%= password_field_tag :password, nil, placeholder: "Password", class: "form-control form-control-lg" %>
          </fieldset>
          <%= submit_tag "Login", class: "btn btn-lg btn-primary pull-xs-right" %>
        <% end %>
      </div>

    </div>
  </div>
</div>
