<div class="profile-page">

  <div class="user-info">
    <div class="container">
      <div class="row">

        <div class="col-xs-12 col-md-10 offset-md-1">
          <img src="http://i.imgur.com/Qr71crq.jpg" class="user-img" />
          <h4>@<%= @user.username %></h4>
          <% if @user.bio.present? %>
          <p>
            <%= @user.bio %>
          </p>
          <% end %>
          <button class="btn btn-sm btn-outline-secondary action-btn">
            <i class="ion-plus-round"></i>
            &nbsp;
            Follow @<%= @user.username %>
          </button>
        </div>

      </div>
    </div>
  </div>

  <div class="container">
    <div class="row">

      <div class="col-xs-12 col-md-10 offset-md-1">
        <div class="articles-toggle">
          <ul class="nav nav-pills outline-active">
            <li class="nav-item">
            <%= link_to "My Articles", user_path(@user), class: "nav-link #{params[:favourites] ? '' : 'active'}" %>
            </li>
            <li class="nav-item">
            <%= link_to "Favorited Articles", user_path(@user, favourites: true), class: "nav-link #{params[:favourites] ? 'active' : ''}" %>
            </li>
          </ul>
        </div>
        <%= render @articles %>

    </div>
  </div>

</div>
